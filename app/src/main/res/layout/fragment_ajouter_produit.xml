<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:background="#EAEAEA"
    tools:context="com.example.staff.AjouterProduit">

    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="677dp"


        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:background="#EAEAEA"
        android:orientation="vertical"
        android:padding="0dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.cardview.widget.CardView
            android:layout_width="221dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="100dp"
            android:elevation="10dp"
            android:foregroundGravity="center_vertical|center"
            app:cardBackgroundColor="#5FA0D9"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="10dp">

            <TextView
                android:id="@+id/ajouteroproduittxt"
                android:layout_width="201dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:fontFamily="@font/robotoo"
                android:gravity="center"
                android:text="Ajouter un Produit"
                android:textColor="#E9F3F3F3"
                android:textColorHint="#EDE9E9"
                android:textSize="18sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="369dp"
            android:layout_height="485dp"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            android:layout_marginTop="100dp"
            android:elevation="30dp"
            app:cardBackgroundColor="#EBF1F2F3"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="392dp"
                android:layout_height="491dp"
                android:layout_marginTop="0dp"
                android:background="#CEEAEAEA"
                android:elevation="30dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Nomproduittxt"
                        android:layout_width="109dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"
                        android:elevation="2dp"
                        android:fontFamily="@font/robotoo"
                        android:text="Nom Produit"
                        android:textColor="#141515"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/Nomproduitid"
                        android:layout_width="300dp"
                        android:layout_height="38dp"
                        android:layout_gravity="center"
                        android:background="#834747"
                        android:backgroundTint="#EAE8E8"
                        android:backgroundTintMode="add"
                        android:ems="10"
                        android:fontFamily="@font/robotoo"
                        android:hint="Nom Produit"
                        android:inputType="textPersonName"
                        android:shadowColor="#1E1C1C"
                        android:textColor="#65051C24"
                        android:textColorHighlight="#131313"
                        android:textColorHint="#77141515"
                        android:textColorLink="#171616"
                        android:textSize="16sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Quantitétxt"
                        android:layout_width="106dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginBottom="5dp"
                        android:elevation="2dp"
                        android:fontFamily="@font/robotoo"
                        android:text="Quantité"
                        android:textColor="#141515"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/Quantiteid"
                        android:layout_width="300dp"
                        android:layout_height="37dp"
                        android:layout_gravity="center"
                        android:background="#EAE8E8"
                        android:backgroundTint="#EAE8E8"
                        android:ems="10"

                        android:fontFamily="@font/robotoo"
                        android:hint="Quantité"
                        android:textColor="#65051C24"
                        android:textColorHint="#77141515"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/prixtxt"
                        android:layout_width="166dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginBottom="5dp"
                        android:elevation="2dp"
                        android:fontFamily="@font/robotoo"
                        android:text="Prix produit"
                        android:textColor="#141515"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/prixproduitid"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ems="10"
                        android:fontFamily="@font/robotoo"
                        android:hint="Prix produit"
                        android:inputType="number"
                        android:textColor="#65051C24"
                        android:textColorHint="#77141515"
                        android:textSize="16sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/descriptiontxt"
                        android:layout_width="166dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginBottom="5dp"
                        android:elevation="2dp"
                        android:fontFamily="@font/robotoo"
                        android:text="Description produit"
                        android:textColor="#141515"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/descriptionid"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ems="10"
                        android:fontFamily="@font/robotoo"
                        android:hint="Description produit"
                        android:inputType="number"
                        android:textColor="#65051C24"
                        android:textColorHint="#77141515"
                        android:textSize="16sp" />
                </LinearLayout>


                <Button
                    android:id="@+id/Ajouterproduitbtn"
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="35dp"

                    android:backgroundTint="#5FA0D9"
                    android:elevation="20dp"
                    android:fontFamily="@font/robotoo"
                    android:text="Ajouter"
                    android:textColor="@color/colorOnSecondary"
                    android:textColorHint="#5FA0D9"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_add"
                    app:iconPadding="0dp"
                    app:iconSize="20sp"
                    app:iconTint="@color/colorOnBackground" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</FrameLayout>