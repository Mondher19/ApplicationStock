<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5FA0D9"
    tools:context="com.example.staff.ModifierProduit">

    <androidx.cardview.widget.CardView
        android:layout_width="352dp"
        android:layout_height="43dp"

        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="#FFF"
        android:orientation="horizontal"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="78dp"
            android:layout_height="48dp"
            android:layout_gravity="left"
            android:layout_marginTop="0dp"
            android:foregroundGravity="left"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />
        <TextView
            android:id="@+id/Username"
            android:layout_width="201dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/robotoo"
            android:gravity="center"
            android:text="Modifier un Produit"
            android:textColor="#E9051C24"
            android:textSize="18sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="551dp"


        android:layout_marginTop="150dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:background="#5FA0D9"
        android:orientation="vertical"
        android:padding="0dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.cardview.widget.CardView
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            app:cardBackgroundColor="#FFF"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="483dp"
                android:elevation="30dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/Nomcomplettxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textColorHint="#020202"
                        app:boxBackgroundColor="#25051C24"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxStrokeColor="#020202"
                        app:errorEnabled="true"
                        app:helperTextTextColor="#020202"
                        app:hintTextColor="#020202"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/password"
                        app:placeholderTextColor="#020202"
                        app:prefixTextColor="#020202"

                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/Nomproduitid"
                            android:layout_width="319dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"

                            android:background="@null"
                            android:fontFamily="@font/robotoo"
                            android:hint="       Nom du produit "
                            android:inputType="textEmailAddress"
                            android:password="false"
                            android:shadowColor="#020202"
                            android:textColor="#020202"
                            android:textColorHighlight="#020202"
                            android:textColorHint="#020202"
                            android:textColorLink="#020202" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/emailadressetxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textColorHint="#020202"
                        app:boxBackgroundColor="#1D051C24"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxStrokeColor="#020202"
                        app:errorEnabled="true"
                        app:helperTextTextColor="#020202"
                        app:hintTextColor="#020202"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/password"
                        app:placeholderTextColor="#020202"
                        app:prefixTextColor="#020202"

                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/Quantiteid"
                            android:layout_width="319dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"

                            android:background="@null"
                            android:fontFamily="@font/robotoo"
                            android:hint="       QuantitÃ© du produit "
                            android:inputType="textEmailAddress"
                            android:password="false"
                            android:shadowColor="#020202"
                            android:textColor="#020202"
                            android:textColorHighlight="#020202"
                            android:textColorHint="#020202"
                            android:textColorLink="#020202" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/Numteltxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textColorHint="#020202"
                        app:boxBackgroundColor="#1D051C24"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxStrokeColor="#020202"
                        app:errorEnabled="true"
                        app:helperTextTextColor="#020202"
                        app:hintTextColor="#020202"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/password"
                        app:placeholderTextColor="#020202"
                        app:prefixTextColor="#020202"

                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/prixproduitid"
                            android:layout_width="319dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"

                            android:background="@null"
                            android:fontFamily="@font/robotoo"
                            android:hint="       Prix du produit "
                            android:inputType="textEmailAddress"
                            android:password="false"
                            android:shadowColor="#020202"
                            android:textColor="#020202"
                            android:textColorHighlight="#020202"
                            android:textColorHint="#020202"
                            android:textColorLink="#020202" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/texttt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textColorHint="#020202"
                        app:boxBackgroundColor="#1D051C24"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxStrokeColor="#020202"
                        app:errorEnabled="true"
                        app:helperTextTextColor="#020202"
                        app:hintTextColor="#020202"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/password"
                        app:placeholderTextColor="#020202"
                        app:prefixTextColor="#020202"

                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/descriptionid"
                            android:layout_width="319dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"

                            android:background="@null"
                            android:fontFamily="@font/robotoo"
                            android:hint="       Description du produit "
                            android:inputType="textEmailAddress"
                            android:password="false"
                            android:shadowColor="#020202"
                            android:textColor="#020202"
                            android:textColorHighlight="#020202"
                            android:textColorHint="#020202"
                            android:textColorLink="#020202" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>


                <Button
                    android:id="@+id/Modifierproduitbtn"
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="20dp"

                    android:backgroundTint="#99020C20"
                    android:elevation="20dp"
                    android:fontFamily="@font/robotoo"
                    android:text="Modifier"
                    android:textColor="@color/colorOnSecondary"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_add"
                    app:iconPadding="0dp"
                    app:iconSize="20sp"
                    app:iconTint="@color/colorOnBackground" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</FrameLayout>