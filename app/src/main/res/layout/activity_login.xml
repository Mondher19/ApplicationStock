<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.staff.Login">


    <LinearLayout


        android:layout_width="0dp"
        android:layout_height="0dp"

        android:background="#EAEAEA"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="98dp"
            android:layout_height="83dp"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:elevation="50dp"
            android:fadingEdgeLength="20dp"
            android:foregroundGravity="center_vertical|center"
            app:srcCompat="@drawable/avatarv5" />

        <androidx.cardview.widget.CardView
            android:layout_width="359dp"
            android:layout_height="473dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:elevation="30dp"
            android:foregroundGravity="center_vertical|center"
            app:cardBackgroundColor="#5FA0D9"
            app:cardCornerRadius="50dp"
            app:cardElevation="30dp"
            app:cardMaxElevation="30dp">

            <TextView
                android:id="@+id/Register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:background="#EAEAEA"
                android:fontFamily="@font/robotoo"
                android:gravity="start"
                android:includeFontPadding="false"
                android:text="  Bienvenue Ã  nouveau !"
                android:textColor="#1D1E26"
                android:textSize="28sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailadressetxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="130dp"
                android:layout_marginRight="0dp"
                android:textColorHint="#D9DEE1"
                app:boxBackgroundColor="#51051C24"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="#D9DEE1"
                app:errorEnabled="true"
                app:helperTextTextColor="#D9DEE1"
                app:hintTextColor="#D9DEE1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/password"
                app:placeholderTextColor="#D9DEE1"
                app:prefixTextColor="#D9DEE1"
                app:startIconDrawable="@drawable/ic_email"
                app:startIconTint="#1D1E26">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailadresse"
                    android:layout_width="319dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:background="@null"
                    android:fontFamily="@font/robotoo"
                    android:hint="       Votre email"
                    android:inputType="textEmailAddress"
                    android:password="false"
                    android:shadowColor="#D9DEE1"
                    android:textColor="#D9DEE1"
                    android:textColorHighlight="#D9DEE1"
                    android:textColorHint="#D9DEE1"
                    android:textColorLink="#D9DEE1" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/passwordtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="0dp"
                android:gravity="center"
                android:textColorHint="#D9DEE1"
                app:boxBackgroundColor="#51051C24"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="#D9DEE1"
                app:errorEnabled="true"
                app:helperTextTextColor="#D9DEE1"
                app:hintTextColor="#D9DEE1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/password"
                app:placeholderTextColor="#D9DEE1"
                app:prefixTextColor="#D9DEE1"
                app:startIconDrawable="@drawable/ic_baseline_lock_24"
                app:startIconTint="#1D1E26"

                app:suffixTextColor="#D9DEE1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="319dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:background="@null"
                    android:fontFamily="@font/robotoo"
                    android:hint="       Votre mot de passe"
                    android:inputType="text"
                    android:password="true"
                    android:shadowColor="#003C57"
                    android:textColor="#003C57"
                    android:textColorHighlight="#003C57"
                    android:textColorHint="#003C57"
                    android:textColorLink="#003C57" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="368dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/remembermecheckbox"
                    android:layout_width="129dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/robotoo"
                    android:minHeight="48dp"
                    android:text="Se souvenir de moi"
                    android:textColor="#D9DEE1"
                    android:textColorHighlight="#D9DEE1"
                    android:textColorHint="#D9DEE1"
                    android:textColorLink="#D9DEE1" />

            </LinearLayout>

            <Button
                android:id="@+id/signinBtn"
                android:layout_width="262dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="130dp"
                android:layout_marginRight="0dp"
                android:backgroundTint="#65051C24"
                android:contentDescription="@string/app_name"
                android:elevation="20dp"
                android:fontFamily="@font/robotoo"
                android:gravity="center"
                android:text="Connexion"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="18dp"
                app:cornerRadius="15dp" />


        </androidx.cardview.widget.CardView>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>