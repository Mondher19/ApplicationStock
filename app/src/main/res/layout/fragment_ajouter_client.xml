<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5FA0D9"
    tools:context="com.example.staff.AjouterClient">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="671dp"


        android:layout_marginTop="60dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:background="#5FA0D9"
        android:orientation="vertical"
        android:padding="0dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="221dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:elevation="0dp"
            android:foregroundGravity="center_vertical|center"
            app:cardBackgroundColor="#EAEAEA"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp"
            app:cardMaxElevation="0dp">

            <TextView
                android:id="@+id/Username"
                android:layout_width="201dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:fontFamily="@font/robotoo"
                android:gravity="center"
                android:text="Ajouter un client"
                android:textColor="#E9051C24"
                android:textSize="18sp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            app:cardBackgroundColor="#EAEAEA"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="547dp"
                android:elevation="30dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/Nomcomplettxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textColorHint="#020202"
                        app:boxBackgroundColor="#25051C24"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxStrokeColor="#020202"
                        app:errorEnabled="true"
                        app:helperTextTextColor="#020202"
                        app:hintTextColor="#020202"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/password"
                        app:placeholderTextColor="#020202"
                        app:prefixTextColor="#020202"

                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/Nomcompletid"
                            android:layout_width="319dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"

                            android:background="@null"
                            android:fontFamily="@font/robotoo"
                            android:hint="       Nom Complet"
                            android:inputType="textEmailAddress"
                            android:password="false"
                            android:shadowColor="#020202"
                            android:textColor="#020202"
                            android:textColorHighlight="#020202"
                            android:textColorHint="#020202"
                            android:textColorLink="#020202" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/emailadressetxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textColorHint="#020202"
                        app:boxBackgroundColor="#1D051C24"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxStrokeColor="#020202"
                        app:errorEnabled="true"
                        app:helperTextTextColor="#020202"
                        app:hintTextColor="#020202"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/password"
                        app:placeholderTextColor="#020202"
                        app:prefixTextColor="#020202"

                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/Adressemailid"
                            android:layout_width="319dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"

                            android:background="@null"
                            android:fontFamily="@font/robotoo"
                            android:hint="       Adresse email "
                            android:inputType="textEmailAddress"
                            android:password="false"
                            android:shadowColor="#020202"
                            android:textColor="#020202"
                            android:textColorHighlight="#020202"
                            android:textColorHint="#020202"
                            android:textColorLink="#020202" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/Numteltxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textColorHint="#020202"
                        app:boxBackgroundColor="#1D051C24"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxStrokeColor="#020202"
                        app:errorEnabled="true"
                        app:helperTextTextColor="#020202"
                        app:hintTextColor="#020202"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/password"
                        app:placeholderTextColor="#020202"
                        app:prefixTextColor="#020202"

                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/Numtelid"
                            android:layout_width="319dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"

                            android:background="@null"
                            android:fontFamily="@font/robotoo"
                            android:hint="       Numero telephone "
                            android:inputType="textEmailAddress"
                            android:password="false"
                            android:shadowColor="#020202"
                            android:textColor="#020202"
                            android:textColorHighlight="#020202"
                            android:textColorHint="#020202"
                            android:textColorLink="#020202" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Adressetxt"
                        android:layout_width="99dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginBottom="5dp"
                        android:elevation="5dp"
                        android:fontFamily="@font/robotoo"
                        android:text="Localisation"
                        android:textColor="#020202"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnSelectLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:backgroundTint="#43051C24"
                        android:fontFamily="@font/robotoo"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:text="Choisir La localisation" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Credit"
                        android:layout_width="54dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginBottom="10dp"
                        android:elevation="2dp"
                        android:fontFamily="@font/robotoo"
                        android:text="Credit"
                        android:textColor="#020202"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/CreditSpinner"
                        android:layout_width="215dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </LinearLayout>


                <Button
                    android:id="@+id/Ajouterclientbtn"
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="20dp"

                    android:backgroundTint="#99020C20"
                    android:elevation="20dp"
                    android:fontFamily="@font/robotoo"
                    android:text="Ajouter"
                    android:textColor="@color/colorOnSecondary"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_add"
                    app:iconPadding="0dp"
                    app:iconSize="20sp"
                    app:iconTint="@color/colorOnBackground" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <ImageView
        android:id="@+id/backtn9"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="350dp"
        android:backgroundTint="#0AADF6"
        android:clickable="true"
        android:foregroundGravity="right"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />
</FrameLayout>