<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="false"
    android:background="#EAEAEA"


    android:hapticFeedbackEnabled="false">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        android:padding="0dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="194dp"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="60dp"
            android:elevation="40dp"
            app:cardBackgroundColor="#5FA0D9"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/titre"
                android:layout_width="190dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:fontFamily="@font/robotoo"
                android:gravity="center"
                android:text="Paramètres "
                android:textColor="#050505"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:text="Paramètres " />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="99dp"
            android:layout_height="79dp"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="0dp"
            android:elevation="20dp"
            app:srcCompat="@drawable/avatarv5" />


        <androidx.cardview.widget.CardView
            android:layout_width="173dp"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:elevation="40dp"
            app:cardBackgroundColor="#5FA0D9"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/Username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:fontFamily="@font/robotoo"
                android:gravity="center"
                android:text="User"
                android:textColor="#1D1E26"
                android:textSize="16sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/editprofilecard"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#5FA0D9"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView41"
                    android:layout_width="31dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"

                    app:srcCompat="@drawable/ic_baseline_account_box_24" />

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="236dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="-50dp"
                    android:fontFamily="@font/robotoo"
                    android:gravity="center"
                    android:text="Modifier le profil "
                    android:textColor="#1D1E26"
                    android:textStyle="bold"
                    tools:text="Modifier le profil " />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="85dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                    app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:id="@+id/night"

            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#5FA0D9"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4211"
                    android:layout_width="31dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/ic_baseline_dark_mode_24"
                    app:srcCompat="@drawable/ic_baseline_dark_mode_24"
                    tools:srcCompat="@drawable/ic_baseline_dark_mode_24" />

                <TextView
                    android:id="@+id/textView3121"
                    android:layout_width="211dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="-50dp"
                    android:fontFamily="@font/robotoo"
                    android:gravity="center"
                    android:text="Mode sombre"
                    android:textColor="#1D1E26"
                    android:textStyle="bold"
                    tools:text="Mode sombre" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/nightid"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="85dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                    app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Notification"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#5FA0D9"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView412"
                    android:layout_width="31dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"

                    app:srcCompat="@drawable/ic_baseline_notifications_24" />

                <TextView
                    android:id="@+id/textView311"
                    android:layout_width="269dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="-50dp"
                    android:fontFamily="@font/robotoo"
                    android:gravity="center"
                    android:text="On/Off les notifications"
                    android:textColor="#1D1E26"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="On/Off les notifications" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchnotification"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                    app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Languages"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#5FA0D9"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView411"
                    android:layout_width="31dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/ic_baseline_language_24"
                    app:srcCompat="@drawable/ic_baseline_language_24"
                    tools:srcCompat="@drawable/ic_baseline_language_24" />

                <TextView
                    android:id="@+id/textView322"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="-50dp"
                    android:fontFamily="@font/robotoo"
                    android:gravity="center"
                    android:text="Languages"
                    android:textColor="#1D1E26"
                    android:textStyle="bold"
                    tools:text="Languages" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="120dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                    app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:id="@+id/PrivatePolicy"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#5FA0D9"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView421"
                    android:layout_width="31dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/ic_baseline_account_box_24"
                    app:srcCompat="@drawable/ic_baseline_account_box_24"
                    tools:srcCompat="@drawable/ic_baseline_account_box_24" />

                <TextView
                    android:id="@+id/textView312"
                    android:layout_width="305dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="-50dp"
                    android:fontFamily="@font/robotoo"
                    android:gravity="center"
                    android:text="Politique de confidentialité"
                    android:textColor="#1D1E26"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="Politique de confidentialité" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="120dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                    app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Logout"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#5FA0D9"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="31dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/ic_baseline_logout_24"
                    app:srcCompat="@drawable/ic_baseline_logout_24"
                    app:startIconTint="#000000"
                    tools:srcCompat="@drawable/ic_baseline_logout_24" />

                <TextView

                    android:id="@+id/textView3"
                    android:layout_width="258dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="-70dp"
                    android:contentDescription="Logout"
                    android:fontFamily="@font/robotoo"
                    android:gravity="center"
                    android:text="  déconnexion"
                    android:textColor="#1D1E26"
                    android:textStyle="bold"
                    tools:text="Déconnexion" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</FrameLayout>